@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class ResultDisplay
Class BookmarkListPanel
Class BookmarkCard
Class StatusBarFooter
Class CommandBox
package TabView <<Rectangle>>{
Class OfflinePanel
Class BrowserPanel
Class DashboardPanel
Class FolderStructureTreeView
Class AnnotationListPanel
Class AnnotationParagraphCard
}
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> MainWindow
MainWindow --> HelpWindow
MainWindow *-down-> CommandBox
MainWindow *-down-> ResultDisplay
MainWindow *-down-> BookmarkListPanel
MainWindow *-down-> StatusBarFooter
MainWindow *-down-> DashboardPanel
MainWindow *-down-> BrowserPanel
MainWindow *-down-> OfflinePanel

DashboardPanel *-down-> FolderStructureTreeView
OfflinePanel *-down-> AnnotationListPanel

BookmarkListPanel -down-> BookmarkCard
AnnotationListPanel -down-> AnnotationParagraphCard

MainWindow --|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
BookmarkListPanel --|> UiPart
BookmarkCard --|> UiPart
StatusBarFooter --|> UiPart
HelpWindow -down-|> UiPart
FolderStructureTreeView --|> UiPart
AnnotationListPanel --|> UiPart
AnnotationParagraphCard --|> UiPart
DashboardPanel --|> UiPart
OfflinePanel --|> UiPart
BrowserPanel --|> UiPart

BookmarkCard ..> Model
AnnotationParagraphCard ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic

BookmarkListPanel -[hidden]left- HelpWindow
HelpWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter

MainWindow -[hidden]-|> UiPart
@enduml
